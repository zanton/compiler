typedef struct char_buf {
  char *str; //string
  int str_len; //string length including '\0'
}* char_buf_t;

char_buf_t mk_char_buf(); //contructor
void add_char(char_buf_t t, char c); // add 1 charactor to string
void clear_char_buf(char_buf_t t); // clear string
char* get_str(char_buf_t t); //return string
void cpy_char_buf_t(char_buf_t t1, char_buf_t t2); //copy char_buf_t from t2 to t1
int get_str_len(char_buf_t t); //return str_len

